<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pictop_3">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="80sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/libre_baskerville_bold" />

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/textTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/pointer_11"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textCompanyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:background="@color/material_dynamic_tertiary50"
        android:fontFamily="@font/libre_baskerville_regular"
        android:gravity="center"
        android:text="@string/store_details"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnViewGallery"
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/material_dynamic_tertiary50"
        android:fontFamily="@font/libre_baskerville_regular"
        android:text="@string/text_button_to_gallery"
        android:textSize="16sp" />

</RelativeLayout>
